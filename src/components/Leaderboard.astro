---
import LeaderboardTable from './LeaderboardTable.astro'
import { Icon } from 'astro-icon/components'
import { cn } from '@/lib/utils'

interface Props {
  project: string
  className?: string
  limit?: number
}

const { project, className, limit = 3 } = Astro.props
---

<LeaderboardTable server:defer project={project} className={className} limit={limit}>
  <div slot="fallback" class={cn('flex flex-col gap-4', className)}>
    <!-- Header stats -->
    <div class="flex flex-col gap-1 text-xs sm:text-sm">
      <div class="flex items-center gap-2">
        <Icon name="lucide:users" class="size-3 sm:size-4 text-muted-foreground/50" />
        <div class="h-3.5 w-28 bg-foreground/10 animate-pulse rounded" />
      </div>
    </div>

    <!-- Submission rows -->
    <div class="flex flex-col">
      {Array.from({ length: limit }).map((_, i) => (
        <>
          <div class="py-4 sm:py-5 px-2 sm:px-3">
            <div class="flex items-start gap-3">
              <!-- Rank badge -->
              <div class="flex-shrink-0">
                <div class="w-10 h-8 bg-foreground/10 animate-pulse rounded-md" />
              </div>

              <!-- User info -->
              <div class="flex-1 min-w-0 flex flex-col gap-1">
                <!-- Avatars -->
                <div class="flex -space-x-2">
                  <div class="size-8 rounded-full bg-foreground/10 animate-pulse border-2 border-background" />
                  <div class="size-8 rounded-full bg-foreground/10 animate-pulse border-2 border-background" />
                </div>
                <!-- Names -->
                <div class="h-3.5 w-36 bg-foreground/10 animate-pulse rounded" />
                <!-- Time -->
                <div class="h-2.5 w-16 bg-foreground/10 animate-pulse rounded" />
              </div>

              <!-- Score -->
              <div class="text-right flex-shrink-0 flex flex-col items-end gap-1">
                <div class="h-6 w-14 bg-foreground/10 animate-pulse rounded" />
                <div class="h-2.5 w-6 bg-foreground/10 animate-pulse rounded" />
              </div>
            </div>
          </div>
          {i < limit - 1 && (
            <div class="mx-auto max-w-2xl w-full">
              <div class="h-px bg-gradient-to-r from-transparent via-border/30 to-transparent" />
            </div>
          )}
        </>
      ))}
    </div>
  </div>
</LeaderboardTable>
